<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    tools:context="com.example.dean.calliper.app.CalibrationFragment">

    <TextView
        android:id="@+id/cal0_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/cal50_text"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="Zero"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/field_cal_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/cal0_text"
        android:text="900"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/cal50_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cal0_text"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="50mm"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/field_cal_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/cal50_text"
        android:text="10"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <SeekBar
        android:id="@+id/seekBar_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cal0_text"
        android:layout_alignTop="@id/cal0_text"
        android:layout_toEndOf="@+id/cal0_text"
        android:layout_toStartOf="@+id/field_cal_0"
        android:indeterminate="false"
        android:max="1023"
        android:progress="900"
        android:splitTrack="false" />

    <SeekBar
        android:id="@+id/seekBar_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cal50_text"
        android:layout_alignStart="@+id/seekBar_0"
        android:layout_alignTop="@+id/cal50_text"
        android:layout_toStartOf="@id/field_cal_50"
        android:indeterminate="false"
        android:max="1022"
        android:progress="10" />

</RelativeLayout>
