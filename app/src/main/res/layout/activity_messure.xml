<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.dean.calliper.app.Messure">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.dean.calliper.app.Messure"
        tools:showIn="@layout/activity_messure">

        <Switch
            android:id="@+id/led_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:checked="false"
            android:nestedScrollingEnabled="false"
            android:text="@string/switch_ledtoggle" />

        <Button
            android:id="@+id/label_measurement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/led_toggle"
            android:onClick="onMeasureClicked"
            android:text="Measurement" />

        <TextView
            android:id="@+id/field_measurement_adc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/label_measurement"
            android:text=" ADC"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <TextView
            android:id="@+id/field_measurement_mm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/field_measurement_adc"
            android:text=" mm"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

    <fragment
        android:id="@+id/calibration_fragment"
        class="com.example.dean.calliper.app.CalibrationFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_calibration" />

</LinearLayout>
